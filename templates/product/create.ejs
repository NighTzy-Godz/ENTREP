<% layout('base/base') %> <%- include('../partials/navbar') %> <%-
include('../partials/flash') %>

<div class="edit" style="padding: 50px">
  <div class="row">
    <h1 class="text-center mb-5">CREATE YOUR PRODUCT</h1>
    <div class="col-10 offset-1">
      <form
        action="/product"
        method="POST"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-4">
          <label for="validationCustom01" class="form-label"
            >Product Name</label
          >
          <input
            type="text"
            class="form-control"
            id="validationCustom01"
            required
            name="productName"
            placeholder="Product Name"
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please put a Product Name.</div>
        </div>
        <div class="mb-4">
          <label for="Image" class="form-label">Image Url</label>
          <input
            type="file"
            class="form-control"
            id="Image"
            required
            multiple
            name="img"
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please put an Image Url.</div>
        </div>

        <div class="mb-4">
          <label for="validationCustomUsername" class="form-label">Price</label>
          <div class="input-group has-validation">
            <span class="input-group-text" id="inputGroupPrepend">&#8369;</span>
            <input
              type="number"
              class="form-control"
              id="validationCustomUsername"
              aria-describedby="inputGroupPrepend"
              name="price"
              required
              placeholder="Product's Price"
            />
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Please put a Price.</div>
          </div>
        </div>

        <div class="mb-4 has-validation">
          <label for="exampleFormControlTextarea1" class="form-label"
            >Description</label
          >
          <div class="input-group has-validation">
            <textarea
              class="form-control"
              id="exampleFormControlTextarea1"
              rows="3"
              name="desc"
              required
              placeholder="Product's Description"
            ></textarea>
            <div class="invalid-feedback">Please put a Description.</div>
            <div class="valid-feedback">Looks Good!</div>
          </div>
        </div>
        <button class="btn btn-success">Create Product</button>
      </form>
      <div class="mt-4">
        <a href="/product %>" style="color: #198754">Go Back</a>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
